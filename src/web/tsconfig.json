{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "..",
    "paths": {
      "@/config": ["config/index.ts"],
      "@/config/env": ["config/env.ts"],
      "@/db": ["db/index.ts"],
      "@/db/schema": ["db/schema.ts"],
      "@/api": ["api/index.ts"],
      "@/auth": ["auth/index.ts"],
      "@/auth/types": ["auth/types.ts"],
      "@/redis": ["redis/index.ts"],
      "@/permissions": ["permissions/index.ts"],
      "@/shared/*": ["shared/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
